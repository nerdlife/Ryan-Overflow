<!-- QUESTION FORM -->
<%= form_for @question do |f| %>
<div class="container">

	<!-- FORM- Question Title –––––––––––––––––––––––––––––––––-->
	<div class="form-group">
		<div class="col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10" style="text-align:center; margin-top: 10px; margin-top: 25px;">
			<h4> <%= f.label :title, "Question Title", class: "form-input-label", style: "text-decoration: underline"%> </h4>
		</div>
		<div class="form-input-field col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10">
			<%= f.text_field :title, placeholder: 'Question Title', class: "form-control" %>
		</div>
	</div>

	<!-- FORM- Question Content –––––––––––––––––––––––––––––––––-->
	<div class="form-group">
		<div class="col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10" style="text-align:center; margin-top: 18px;" >
			<h4> 
				<%= f.label :content, "Question Content", class: "form-input-label", style: "text-decoration: underline" %> 
			</h4>
		</div>
		<div class="form-input-field col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10">
			<%= f.text_area :content, placeholder: 'Question Title', rows: "12", class: "form-control" %>
		</div>
	</div>

	
	<!-- FORM- Question Tags –––––––––––––––––––––––––––––––––-->
	<div class="form-group">
		<div class="col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10" style="text-align:center; margin-top: 18px;" >
			<h4> 
				<%= f.label :tags, "Question Tags ", class: "form-input-label", style: "text-decoration: underline" %> </h4>
			</div>
			<div class="form-input-field col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10">
				<%= f.text_area :tags, placeholder: 'Enter tags with spaces', rows: "2", class: "form-control" %>
			</div>
		</div>

		
		<!-- FORM- Buttons –––––––––––––––––––––––––––––––––-->
		<div class="col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10" style="text-align: center; margin-top: 18px;" >
			<div class="col-xs-6">
				<%= button_to @question, class: "btn btn-outline btn-success", method: :update do %>
				<div class="glyphicon glyphicon-ok"></div> Submit
				<% end %>
			</div>
			<div class="col-xs-6">
				<%= button_to questions_path, class: "btn btn-outline btn-info", method: :get do %>
				<div class="glyphicon glyphicon-remove"></div> Cancel
				<% end %>
			</div>
		</div>
	</div>

	
	<% end %>
	<br>
	<br>
	<br>
