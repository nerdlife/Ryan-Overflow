<!-- SHOW QUESTION VIEW -->

<div class="question-show">
	<h3>
		# <%= @question.id %>  &nbsp
		<strong><%= @question.title %></strong>
	</h3>
	<p>
		<%= @question.content %>
	</p>
	<p>
		<strong>Tags:</strong>
		<br>
		<span class="eightbit-numerical-text-font"> <%= @question.tags %> </span>
	</p>
	<p>
		<strong>Votes:</strong>
		<span class="eightbit-numerical-text-font"> <%= @question.votes.count %> </span>
	</p>
	<p>
		<strong>Asked on</strong>
		<span class="eightbit-numerical-text-font"><%= @question.created_at %></span>
	</p>
	<p>
		<strong>User Id</strong>
		<%= @question.user.id %>
		<br>
		<strong>Asked by</strong>
		<%= @question.user.username %>
	</p>
