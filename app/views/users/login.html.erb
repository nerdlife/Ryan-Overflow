<!-- USERS (controller) LOGIN FORM -->
<div class="row">
    <div class="col-xs-12 page-title">
               <span class="section-title">
                    <span class="section-title-bookends">:::::</span> 
                      Ryan Overflow Log In
                    <span class="section-title-bookends">:::::</span>
              </span>
    </div>
</div>

<div class="container sign-in-up">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <br>
      <!-- Nav tabs -->
      <div class="text-center">
        <div class="btn-group">
          <a href="#new" role="tab" data-toggle="tab" class="big btn btn-success"><i class="fa fa-plus"></i> Sign Up</a>
          <a href="#user" role="tab" data-toggle="tab" class="big btn btn-primary"><i class="fa fa-user"></i> Sign In</a>
        </div>
      </div>
      <div class="tab-content">
      
<!-- SIGN UP FORM –––––––––––––––––––––––––––––––––-->
        <div class="tab-pane fade in active" id="new">
<%= form_for @user, url: {action: "create", params: :user} do |f| %>
          <br>
          <fieldset>
          <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-user"></i>
                <%= f.text_field :name, class: 'form-control input-lg', placeholder: 'Name' %>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-envelope"></i>
                <%= f.text_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-globe"></i>
                <%= f.text_field :username, class: 'form-control input-lg', placeholder: 'Username' %>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-key"></i>
                <%= f.text_field :password, class: 'form-control input-lg', placeholder: 'Password' %>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-key"></i>
                <%= f.text_field :password_confirmation, class: 'form-control input-lg', placeholder: 'Confirm Password' %>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-book"></i>
                <%= f.text_field :bio, class: 'form-control input-lg', placeholder: 'Bio' %>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-camera"></i>
                <%= f.text_field :profile_pic, class: 'form-control input-lg', placeholder: 'Profile Pic Link' %>
              </div>
            </div>
          </fieldset>
          <hr>
          <div class=" text-center">
            <!-- <button type="submit" class="btn btn-success">SIGN UP</button> -->
            <%= button_to @user, class: "btn btn-outline btn-success", method: :create do %>
        <div class="glyphicon glyphicon-ok"></div> Submit
        <% end %>
          </div>
          <hr>
<% end %>
        </div>  <!-- /.tab-pane fade in active -->
<!-- END  SIGNUP FORM –––––––––––––––––––––––––––––––––-->



<!-- LOGIN  FORM –––––––––––––––––––––––––––––––––-->
        <div class="tab-pane fade" id="user">
          <%= form_tag(:action => 'user_login') do %>
          <br>
          <fieldset>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-envelope"></i>
                <%= text_field_tag :email, nil, class: 'form-control input-lg', placeholder: 'Email Address' %>
              </div>
            </div>
            <div class="form-group">
              <div class="right-inner-addon">
                <i class="fa fa-key"></i>
                <%= password_field_tag :password, nil, class: 'form-control input-lg', placeholder: 'Email Address' %>
              </div>
            </div>
          </fieldset>
          <br>
          <hr>
          <div class=" text-center">
          <input class="btn btn-primary" name="commit" type="submit" value="Log In">
          </div>
          <hr>
        </div>  <!-- /.tab-pane fade --> 
<!-- END  LOGIN FORM –––––––––––––––––––––––––––––––––-->

      </div>  <!-- /.tab-content -->
    </div>  <!-- /. col-md-4 col-md-offset-4 -->
  </div>  <!-- /. row -->
</div>  <!-- /.container sign-in-up -->


<% end %>
