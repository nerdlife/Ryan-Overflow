<h3 class="section-header"> Users </h3>
	<table id="users-index-table">
		<thead>
			<tr>
				<th>Profile Picture</th>
				<th>Username</th>
				<th>Email</th>
				<th>Questions</th>
				<th>Answers</th>
				<th>Votes</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr class="users-index-row">
				<td class="users-table-logo">
					<%= link_to user do %>
						<img src="<%= user.profile_pic %>" style="width: 48px; height: 48px;">
					<% end %>
				</td>
				<td><%= link_to user.username, user %></td>
				<td><%= link_to user.email, user %></td>
				<td class="eightbit-numerical-text-font"><%= link_to user.questions.count, user %></td>
				<td class="eightbit-numerical-text-font"><%= link_to user.answers.count, user %></td>
				<td class="eightbit-numerical-text-font">Votes/Points</td>
				
				<td><button><%= link_to 'Edit', edit_user_path(user) %></button></td>
				<td><button><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
			</tr>
			<% end %>
		</tbody>
	</table>

