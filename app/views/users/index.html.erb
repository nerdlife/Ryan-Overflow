<h3 class="section-header"> Users </h3>
	<table class="index-table">
		<thead>
			<tr>
				<th class="index-table-headings index-row-cell" style="border-left: none;">
					Profile Picture
				</th>
				<th class="index-table-headings index-row-cell" style="border-left: none;">
					Username
				</th>
				<th class="index-table-headings index-row-cell" style="border-left: none;">
					Email
				</th>
				<th class="index-table-headings index-row-cell" style="border-left: none;">
					Questions
				</th>
				<th class="index-table-headings index-row-cell" style="border-left: none;">
					Answers
				</th>
				<th class="index-table-headings index-row-cell" style="border-left: none;">
					Votes
				</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr class="index-row">
					<td  class="index-row-cell">
						<%= link_to user do %>
							<img class="index-profile-image" src="<%= user.profile_pic %>">
						<% end %>
					</td>
					<td  class="index-row-cell">
						<%= link_to user.username, user %>
					</td>
					<td  class="index-row-cell">
						<span class="index-email">
							<%= link_to user.email, user %>
						</span>
					</td>
					<td  class="index-row-cell" >
						<%= link_to user.questions.count, user %>
					</td>
					<td  class="index-row-cell" >
						<%= link_to user.answers.count, user %>
					</td>
					<td  class="index-row-cell" >
						Votes/Points
					</td>
					<td  class="index-row-cell">
						<button>
							<%= link_to 'Edit', edit_user_path(user) %>
						</button>
					</td>
					<td  class="index-row-cell">
						<button>
							<%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
						</button>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

