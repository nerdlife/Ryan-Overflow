<h3> <%= @user.username %>'s Profile </h3>

	<table class="index-table">
		<thead>
			<tr>
				<th class="index-table-headings index-row-cell" style="border-left: none;">Image</th>
				<th class="index-table-headings index-row-cell">Username</th>
				<th class="index-table-headings index-row-cell">Email</th>
				<th class="index-table-headings index-row-cell">Bio</th>
				<th class="index-table-headings index-row-cell">Name</th>
				<th class="index-table-headings index-row-cell">Votes</th>
				<!-- <th class="index-table-headings index-row-cell"> Edit </th> -->
				<!-- <th class="index-table-headings index-row-cell"> Delete </th> -->
			</tr>
		</thead>
		<tbody>
			<tr class="index-row">
				<td class="index-row-cell">
					<img class="index-profile-image" src="<%= @user.profile_pic %>" alt="<%= @user.username %>">
				</td>
				<td class="index-row-cell">
					<span class="index-email">
						<%= @user.username %>
					</span>
				</td>
				<td class="index-row-cell">
					<span class="index-email">
						<%= @user.email %>
					</span>
				</td>
				<td class="index-row-cell">
					<span class="index-email">
						<%= @user.bio %>
					</span>
				</td>
				<td class="index-row-cell">
					<span class="index-email">
						<%= @user.name %>
					</span>
				</td>
				<td class="index-row-cell">
					<span class="index-votes">
						Vote #
					</span>	
				</td>
