<!-- USER SHOW -->
<!-- Ryan Overflow Comments –––––––––––––––––––––––––––––––––-->
<div class="row">
   <div class="col-xs-10 col-xs-offset-1" style="text-align:center; text-decoration:underline; margin-bottom: 25px;">
      <h3><%= @user.username %>'s Profile</h3>
      <h3><%= session[:user_id] %>'s Session ID</h3>
   </div>
</div>
<div class="container">
   <div class="row user-show-row">
      <div class="user-show-profile-pic col-xs-2 col-sm-offset-1">
         Profile
      </div>
      <div class="user-show-profile col-xs-6 col-sm-4">
         Bio
      </div>
      <div class="user-show-questions col-xs-1 col-sm-offset-1">
         Questions
      </div>
      <div class="user-show-answers col-xs-1">
         Answers
      </div>
      <div class=" col-xs-2 col-sm-1">
         Votes
      </div>
   </div>
   <div class="row user-show-row">
      <div class="user-show-profile-pic col-xs-2 col-sm-offset-1">
         <%= link_to @user do %>
            <img class="user-show-profile-image" src="<%= @user.profile_pic %>">
         <% end %>
         <%= link_to @user.username, @user %><br>
         <%= link_to @user.email, @user %><br>
            User I.D. # <%= @user.id %><br>
      </div>
      <div class="user-show-profile col-xs-6 col-sm-4">
         <%= link_to @user.bio, @user %><br>
            Location: <%= @user.location %><br>
         <div class="form-group">
            <% if (@current_user.id == @user.id)  %>
               <div class="edit-delete-buttons">
                  <div class="edit-button">
                        <%= button_to edit_user_path(@user.id), class: "btn btn-outline btn-warning btn-lg", method: :get do %>
                              <div class="glyphicon glyphicon-trash"></div> 
                              Edit 
                           <% end %>
                  </div>
                  <div class="edit-button">
                        <%= button_to @user, class: "btn btn-outline btn-danger btn-lg", method: :delete, data: { confirm: 'Are you sure you want to delete your User?' } do %>
                              <div class="glyphicon glyphicon-trash"></div> 
                              Delete 
                           <% end %>
                  </div>
               </div>
            <% else %>
            <% end %>
         </div>
      </div>	
      <div class="user-show-questions col-xs-1 col-sm-offset-1">
         <%= link_to @questions.count, @user %>
      </div>
      <div class="user-show-answers col-xs-1">
         <%= link_to @answers.count, @user %>
      </div>
      <div class="user-show-votes col-xs-2 col-sm-1">
         <div class="votes-container">
            <h4>
               <%= @user.votes.count %>
            </h4>
         </div>
      </div>
   </div>
   <!-- CLOSE CONTAINER -->
</div>
<!-- -----------------------------USERS Questions ------------------------------------ -->
<h3 class="user-headers"> 
   <%= @user.username %>'s  Questions: 
</h3>
<div class="container">		
   <div class="row questions-index-row">
      <div class="questions-index-title col-xs-3 col-sm-offset-1">
         Title
      </div>
      <div class="questions-index-content col-xs-4">
         Content
      </div>
      <div class="col-xs-2 col-sm-1">
         Votes
      </div>
      <div class="questions-index-user col-xs-3 col-sm-2">
         Answers
      </div>
   </div>
   <% if !@user.questions.empty? %>
      <% @user.questions.each do |question| %>
         <div class="row questions-index-row">
            <div class="questions-index-title col-xs-3 col-sm-offset-1">
               <%= link_to question.title, question %>
            </div>
            <div class="questions-index-content col-xs-4">
               <%= link_to question.content, question %><br><br>
               <%= link_to question.tags, question %>
            </div>
            <div class="col-xs-2 col-sm-1">
               <div class="votes-container">
                  <h4>
                     <div class="glyphicon glyphicon-chevron-up votes-container-buttons up-vote" >
                     </div>
                     <strong><u>Votes:</u></strong>
                     <br>
                     <%= question.votes.count %>
                     <br>
                     <div class="glyphicon glyphicon-chevron-down votes-container-buttons down-vote"></div>
                  </h4>
               </div>
            </div>
            <div class="questions-index-user col-xs-3 col-sm-2">
               <%= question.answers.count %>
            </div>
            <% if (@current_user.id == question.user.id)  %>
               <div class="edit-delete-buttons">
                  <div class="edit-button">
                        <%= button_to edit_question_path(question), class: "btn btn-outline btn-warning btn-lg", method: :get do %>
                              <div class="glyphicon glyphicon-trash"></div> 
                              Edit 
                           <% end %>
                  </div>
                  <div class="edit-button">
                        <%= button_to question, class: "btn btn-outline btn-danger btn-lg", method: :delete, data: { confirm: 'Are you sure you want to delete your Question?' } do %>
                              <div class="glyphicon glyphicon-trash"></div> 
                              Delete 
                           <% end %>
                  </div>
               </div>
            <% else %>
            <% end %>
         </div>
      <% end %>
   <% else %>
   <div class="row">
      <div class="questions-index-user col-xs-12">
         <strong><%= @user.username %> hasn't asked any questions yet</strong>
      </div>
   </div>
   <% end %>
   <!-- Close Container -->
</div>
<!-- -----------------------------USERS Answers ------------------------------------ -->
<h3 class="user-headers"> 
   <%= @user.username %>'s Answers: 
</h3>
<div class="container">		
   <div class="row questions-index-row">
      <div class="questions-index-title col-xs-3 col-sm-offset-1">
         Question
      </div>
      <div class="questions-index-content col-xs-4">
         Content
      </div>
      <div class="answers col-xs-2 col-sm-1">
         Votes
      </div>
      <div class="questions-index-user col-xs-3 col-sm-2">
         Question #
      </div>
   </div>
   <% if !@user.answers.empty? %>
      <% @user.answers.each do |answer| %>
         <div class="row questions-index-row">
            <div class="questions-index-title col-xs-3 col-sm-offset-1">
               <%= link_to answer.question.title, answer.question %>
            </div>
            <div class="questions-index-content col-xs-4">
               <%= link_to answer.content, answer %>
            </div>
            <div class="questions-index-votes-answers col-xs-2 col-sm-1">
               <div class="votes-container">
                  <h4>
                     <div class="glyphicon glyphicon-chevron-up votes-container-buttons up-vote" >
                     </div>
                     <strong><u>Votes:</u></strong>
                     <br>
                     <%= answer.votes.count %>
                     <br>
                     <div class="glyphicon glyphicon-chevron-down votes-container-buttons down-vote"></div>
                  </h4>
               </div>
            </div>
            <div class="questions-index-user col-xs-3 col-sm-2">
               <%= link_to answer.question.id, answer.question %>
            </div>
         <% if (@current_user.id == answer.user.id)  %>
               <div class="edit-delete-buttons">
                  <div class="edit-button">
                        <%= button_to edit_answer_path(answer), class: "btn btn-outline btn-warning btn-lg", method: :get do %>
                              <div class="glyphicon glyphicon-trash"></div> 
                              Edit 
                           <% end %>
                  </div>
                  <div class="edit-button">
                        <%= button_to answer, class: "btn btn-outline btn-danger btn-lg", method: :delete, data: { confirm: 'Are you sure you want to delete your Answer?' } do %>
                              <div class="glyphicon glyphicon-trash"></div> 
                              Delete 
                           <% end %>
                  </div>
               </div>
            <% else %>
            <% end %>
         </div>
      <% end %>
   <% else %>
      <div class="row index-row-cell">
         <div class="questions-index-user col-xs-12">
            <strong>No answers for this  question yet</strong>
         </div>
      </div>
   <% end %>
   <!-- Close Container -->
</div>

<br><br><br><br>

